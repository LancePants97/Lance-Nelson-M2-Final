<%= "Coupon Name: #{@coupon.name}" %>
<p><%= "Code: #{@coupon.code}" %> </p>
<% if @coupon.discount_type = 0 %>
  <p><%= "Value: #{@coupon.value}% off" %> </p>
<% elsif @coupon.discount_type = 1 %>
  <%= "Value: $#{@coupon.value} off" %>
<% end %>
<p><%= "Status: #{@coupon.status}" %></p>
<% if @coupon.times_applied == 1 %>
<%= "This coupon has been used #{@coupon.times_applied} time" %>
<% else %>
<%= "This coupon has been used #{@coupon.times_applied} times" %>
<% end %>